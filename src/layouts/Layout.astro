---
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
}

const {title} = Astro.props;
---

<!DOCTYPE html>
<html lang="es" class="scroll-smooth">
<head>
    <meta charset="UTF-8"/>
    ddi
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg"/>
    <title>{title}</title>
    <ViewTransitions/>
</head>
<body>
<Header/>
<main>
    <div class="background fixed inset-0 z-[-1]"></div>
    <slot/>
</main>
<Footer/>
</body>
</html>

<style is:global>
    @import url('https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap');

    body {
        font-family: 'Montserrat', 'Poppins', system-ui, sans-serif;
        @apply bg-slate-900 text-slate-200 leading-relaxed antialiased selection:bg-indigo-400 selection:text-indigo-900;
    }

    .background {
        background-image: radial-gradient(ellipse 100vw 250px, rgba(79, 70, 229, 0.23), #0f172a)
    }

    main {
        margin: 0 auto;
    }
</style>