---
import EmailIcon from "@icons/Email.astro";
import CvIcon from "@icons/Cv.astro";
import GithubIcon from "@icons/Github.astro";
import LinkedInIcon from "@icons/LinkedIn.astro";

import ContactButton from "@components/home/ContactButton.astro";
import { Image } from "astro:assets";

const technologies = [
  {technology: "html"},
  {technology: "css"},
  {technology: "tailwind"},
  {technology: "javascript"},
  {technology: "typescript"},
  {technology: "astro"},
  {technology: "express"},
  {technology: "c"},
  {technology: "java"},
  {technology: "spring"},
  {technology: "mongodb"},
  {technology: "mysql"},
  {technology: "git"},
  {technology: "linux"},
];
---

<section id="home" class="relative flex h-screen w-full ">
    <div class="flex flex-col space-y-12 text-center justify-center w-full">
        <h1 class="font-semibold text-4xl sm:text-5xl lg:text-6xl">
            <span class="block text-indigo-400 text-4xl sm:text-5xl lg:text-6xl mb-4">Software Developer</span>
            Lucas Smilari</h1>

        <div class="flex flex-col justify-center items-center gap-4">
            <button class="group flex relative font-semibold items-center gap-3 bg-indigo-400 px-2 pb-0.5 pt-1 rounded-lg transform duration-300 hover:scale-105">
                <a href="mailto:smilari.lucas@gmail.com" target="_blank" rel="noreferrer noopener"
                   aria-label="Email" title="Email"><span
                        class="absolute -inset-y-1 -inset-x-0.5 rounded"></span>
                    <EmailIcon class="h-6 w-6 sm:h-7 sm:w-7 lg:h-8 lg:w-8"></EmailIcon>
                </a>
                <span class="text-xs sm:text-sm lg:text-base">smilari.lucas@gmail.com</span>
            </button>

            <ul class="flex justify-center items-center gap-4">
                <ContactButton icon={CvIcon} href="./src/assets/Smilari-Lucas.pdf" label="CV" title="CV"/>
                <ContactButton icon={GithubIcon} href="https://github.com/smilari" label="GitHub" title="GitHub"/>
                <ContactButton icon={LinkedInIcon} href="https://www.linkedin.com/in/lucas-smilari/" label="LinkedIn"
                               title="LinkedIn"/>
            </ul>
        </div>
    </div>

    <footer class="absolute bottom-20 left-0 right-0 flex justify-center">
        <a class="grid grid-cols-7 gap-2"
           href="https://skillicons.dev"
           target="_blank" rel="noreferrer noopener"
           aria-label="Skill Icons">
          {technologies.map(({technology}) => (
                  <img
                          class="opacity-80 transition-transform duration-150 hover:scale-[120%]"
                          src={`https://skillicons.dev/icons?i=${technology}`}
                          alt={technology}
                          width="32"
                          height="32"
                  />
          ))}
        </a>
    </footer>
</section>